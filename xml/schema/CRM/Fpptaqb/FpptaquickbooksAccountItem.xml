<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Fpptaqb</base>
  <class>FpptaquickbooksAccountItem</class>
  <name>civicrm_fpptaquickbooks_account_item</name>
  <comment>Link civicrm financial account to quickbooks item/product</comment>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique FpptaquickbooksAccountItem ID</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>financial_account_id</name>
    <type>int unsigned</type>
    <comment>FK to Financial Account</comment>
    <unique>true</unique>
  </field>
  <index>
    <name>UI_fpptaquickbooks_account_item_financial_account_id</name>
    <fieldName>financial_account_id</fieldName>
    <unique>true</unique>
  </index>  
  <foreignKey>
    <name>financial_account_id</name>
    <table>civicrm_financial_account</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>quickbooks_id</name>
    <type>int unsigned</type>
    <comment>Quickbooks invoice ID</comment>
  </field>

</table>
